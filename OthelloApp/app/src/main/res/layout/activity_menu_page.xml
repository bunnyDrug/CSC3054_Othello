<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.don.othello.Game.Menu"
    android:layout_weight="1"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:backgroundTint="@color/.500_orange">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height = "0.5dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:backgroundTint="@color/.100_orange"
        android:background="@color/.100_orange"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player1 Name:"/>


        <EditText
            android:id="@+id/player1Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLength="15"
             />


        <!--image button of the plus sign to create new game-->


    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/startButton"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:src="@drawable/button" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height = "0.5dp"
        android:layout_weight="0.46"
        android:orientation="horizontal"
        android:backgroundTint="@color/.100_orange"
        android:background="@color/.100_orange">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Player2 Name:"/>

        <EditText
            android:id="@+id/player2Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:gravity="right"/>

    </LinearLayout>

</LinearLayout>
