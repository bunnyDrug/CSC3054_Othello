        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OthelloGame"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Rules.Classes.RuleOne"
            android:label="@string/title_activity_rules_page" >
        </activity>
        <activity
            android:name=".SpalshScreen.Othello"
            android:label="@string/title_activity_othello" >
        </activity>
        <activity
            android:name=".SpalshScreen.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Othello"
            android:theme="@style/FullscreenTheme" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".Rules.Classes.RuleTwo"
            android:label="@string/title_activity_rule_two" >
        </activity>
        <activity
            android:name=".Rules.Classes.RuleThree"
            android:label="@string/title_activity_rule_three" >
        </activity>
        <activity
            android:name=".HighScores"
            android:label="@string/title_activity_high_scores" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider642126629251885"
            android:exported="true" />

        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Comments.CommentsView"
            android:label="@string/title_activity_comments_view" >
