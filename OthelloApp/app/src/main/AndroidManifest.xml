        <activity
            android:name=".Rules.Classes.RuleThree"
            android:label="@string/title_activity_rule_three" >
        </activity>
        <activity
            android:name=".HighScores"
            android:label="@string/title_activity_high_scores"
            >
        </activity>

        <activity android:name="com.facebook.FacebookActivity"
                  android:configChanges=
                      "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:label="@string/app_name" />

        <provider android:authorities="com.facebook.app.FacebookContentProvider642126629251885"
                  android:name="com.facebook.FacebookContentProvider"
                  android:exported="true" />
